<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.mab.birthday.MainActivity"
    android:background="@color/colorPrimary">

    <TextView
        android:id="@+id/daysToGO"
        android:alpha=".7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="135dp"
        android:text="6"
        android:textColor="#FFFFFF"
        android:textSize="100sp"/>

    <TextView
        android:alpha="0.7"
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/daysToGO"
        android:layout_centerHorizontal="true"
        android:text="DAYS TO GO"
        android:textColor="#ffffff"
        android:textSize="50sp"/>
    <View android:id="@+id/Faltu"
        android:layout_width="200dp"
        android:layout_height="150dp"
        android:layout_centerVertical="true"
          android:layout_centerHorizontal="true"
        />
    <LinearLayout
        android:id="@+id/L1"
        android:layout_below="@id/textView1"
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true">
        <ImageButton
            android:alpha="0.7"
            android:id="@+id/messageBtn"
            android:visibility="gone"
            android:background="#00ffffff"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_assignment_white_18dp"
            android:layout_margin="10dp"/>

        <ImageButton
            android:visibility="gone"
            android:alpha="0.7"
            android:id="@+id/chatBtn"
            android:layout_margin="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#00ffffff"
            android:src="@drawable/ic_message_white_18dp"/>
    </LinearLayout>
</RelativeLayout>
