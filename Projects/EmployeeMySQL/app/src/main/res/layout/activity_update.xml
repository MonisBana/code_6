<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.mab.employeemysql.Update">
    <TextView
        android:id="@+id/idLabel"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:text="ID:"
        android:textSize="16sp"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="4dp"/>
    <EditText
        android:id="@+id/idVal"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/idLabel"
        android:layout_marginLeft="4dp"/>
    <TextView
        android:id="@+id/nameLabel"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:text="Name:"
        android:textSize="16sp"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/idLabel"
        android:layout_marginLeft="4dp"/>
    <EditText
        android:id="@+id/nameVal"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/nameLabel"
        android:layout_below="@+id/idVal"
        android:layout_marginLeft="4dp"/>
    <TextView
        android:id="@+id/deptLabel"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:text="Dept:"
        android:textSize="16sp"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/nameLabel"
        android:layout_marginLeft="4dp"/>
    <Spinner
        android:id="@+id/deptVal"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/nameLabel"
        android:layout_below="@+id/nameVal"
        android:layout_marginLeft="4dp"
        android:prompt="@string/spinnner_title"/>
    <Button
        android:id="@+id/editBtn"
        android:background="@color/colorPrimary"
        android:text="Update"
        android:textColor="#fff"
        android:textSize="16sp"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
</RelativeLayout>
